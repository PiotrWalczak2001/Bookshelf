@page "/bookdetails/{BookId}"

<h1>@Book.Title</h1>

<div class="col-2">
    <img src="@Book.CoverImageUrl" class="img-responsive rounded-circle" />
</div>
<div class="col-10 row">
    <div class="col-xs-12 col-sm-8">
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Book ID</label>
            <div class="col-sm-8">
                <label type="text" class="form-control-plaintext">@Book.Id</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Title</label>
            <div class="col-sm-8">
                <label type="text" class="form-control-plaintext">@Book.Title</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Author</label>
            <div class="col-sm-8">
                <label type="text" class="form-control-plaintext">@Book.Author</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Category</label>
            <div class="col-sm-8">
                <label type="text" class="form-control-plaintext">@Book.Category</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Description</label>
            <div class="col-sm-8">
                <label type="text" class="form-control-plaintext">@Book.Description</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Release date</label>
            <div class="col-sm-8">
                <label type="text" class="form-control-plaintext">@Book.ReleaseDate</label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Start reading now</label>
            <div class="col-sm-8">
                <label type="text" class="form-control-plaintext"><a href="@($"bookreader/{Book.Id}")" class="btn btn-success">Read</a></label>
            </div>
        </div>

    </div>
</div>


