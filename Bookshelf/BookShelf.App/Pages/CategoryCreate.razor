@page "/categorycreate"

<h1>Create new category</h1>
<section>
    <EditForm Model="@Category" OnValidSubmit="@SendCreateRequest">
        <div class="form-group row">
            <label for="name" class="col-sm-3">Name:</label>
            <InputText id="name" class="form-control col-sm-8" @bind-Value="@Category.Name" placeholder="Enter name"></InputText>
        </div>
        <button type="submit" class="btn btn-primary">Save category</button>
    </EditForm>
</section>